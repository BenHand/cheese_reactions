<p id="notice"><%= notice %></p>

<h2>Cheeses</h2>
<section class="panel panel-default">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Kind</th>
        <th>Rating (1-5 Cheese Wheels)</th>
        <th>Description</th>
        <th>Pic</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cheeses.each do |cheese| %>
        <tr>
          <td><%= link_to cheese.name, cheese_path(cheese.id) %></td>
          <td><%= cheese.kind %></td>
          <td><% (cheese.rating).times do %>
            <%= image_tag("http://hydra-media.cursecdn.com/skyrim.gamepedia.com/thumb/a/a1/GoatCheeseWheel.png/40px-GoatCheeseWheel.png?version=ff504420ac516527e586c333a7c270f8") %>
            <% end %>
          </td>
          <td><%= cheese.description %></td>
          <td><%= image_tag(cheese.pic, size: '80x50')%></td>
          <td><%= cheese.user %></td>
          <td><%= link_to 'Edit', edit_cheese_path(cheese) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</section>
<br>

<%= link_to 'New Cheese', new_cheese_path %>
